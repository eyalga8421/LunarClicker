<body>
  <header>
    <div class="brand">
      <div class="moon" aria-hidden="true"></div>
      <div>Lunar Clicker</div>
    </div>
    <div class="controls">
      <button class="btn" id="themeBtn" aria-label="החלפת מצב תצוגה">מצב בהיר/כהה</button>
      <button class="btn" id="soundBtn" aria-label="הפעלת צלילים">צלילים: כבוי</button>
      <button class="btn" id="resetBtn" aria-label="איפוס משחק">איפוס</button>
    </div>
  </header>

  <main class="wrap">
    <section class="panel">
      <h2>אזור קליקים</h2>
      <div class="click-zone">
        <div class="stats">
          <div class="stat">
            <div class="v" id="currency">0</div>
            <div class="k">אבני ירח</div>
          </div>
          <div class="stat">
            <div class="v" id="perClick">1</div>
            <div class="k">לכל קליק</div>
          </div>
          <div class="stat">
            <div class="v" id="perSec">0</div>
            <div class="k">לשנייה</div>
          </div>
        </div>

        <button class="big-button" id="bigBtn" aria-label="קליק כדי לכרות אבני ירח">
          <span class="label">קליק!</span>
        </button>
        <div class="muted tiny">טיפ: שדרוגים מעלים רווח לכל קליק ולשנייה. פרסטיז' מאפס אבל נותן בונוס קבוע.</div>
      </div>
    </section>

    <section class="panel">
      <h2>חנות ושדרוגים</h2>
      <div class="shop" id="shop"></div>

      <div class="footer">
        <div>פרסטיז' נותן בונוס קבוע של 10% לכל הרווחים.</div>
        <button class="btn" id="prestigeBtn">פרסטיז' (עלות: 10,000)</button>
      </div>
    </section>
  </main>

  <div class="toast" id="toast" role="status" aria-live="polite">נשמר!</div>

  <script>
    // ---- Core state ----
    const state = {
      currency: 0,
      perClick: 1,
      perSec: 0,
      prestige: 0, // each prestige = +10% multiplier
      items: [
        {
          id: 'pick',
          name: 'מכוש ירחי',
          desc: 'מעלה את הרווח לכל קליק ב-+1.',
          baseCost: 15,
          owned: 0,
          type: 'click',
          effect: 1
        },
        {
          id: 'drill',
          name: 'מקדח אוטומטי',
          desc: 'מוסיף +1 לשנייה.',
          baseCost: 50,
          owned: 0,
          type: 'sec',
          effect: 1
        },
        {
          id: 'lab',
          name: 'מעבדת שדרוג',
          desc: 'מכפילה את הרווח לכל קליק (x2).',
          baseCost: 250,
          owned: 0,
          type: 'mult-click',
          effect: 2
        },
        {
          id: 'rover',
          name: 'רובר כרייה',
          desc: 'מוסיף +5 לשנייה.',
          baseCost: 800,
          owned: 0,
          type: 'sec',
          effect: 5
        },
        {
          id: 'array',
          name: 'מערך כרייה',
          desc: 'מכפיל את הרווח לשנייה (x2).',
          baseCost: 2500,
          owned: 0,
          type: 'mult-sec',
          effect: 2
        }
      ]
    };

    // ---- Helpers ----
    const fmt = n => {
      if (n < 1000) return n.toFixed(0);
      const units = ['K','M','B','T','Q'];
      let u = -1;
      let v = n;
      while (v >= 1000 && u < units.length-1) { v/=1000; u++; }
      return v.toFixed(2) + units[u];
    };

    const prestigeMult = () => 1 + state.prestige * 0.10;

    const save = () => {
      localStorage.setItem('lunar-save', JSON.stringify(state));
      showToast('נשמר!');
    };
    const load = () => {
      const raw = localStorage.getItem('lunar-save');
      if (!raw) return;
      try {
        const s = JSON.parse(raw);
        // Defensive merge
        ['currency','perClick','perSec','prestige'].forEach(k => {
          if (typeof s[k] === 'number') state[k] = s[k];
        });
        if (Array.isArray(s.items)) {
          state.items.forEach(it => {
            const found = s.items.find(x => x.id === it.id);
            if (found) it.owned = found.owned ?? 0;
          });
        }
      } catch(e) { console.warn('load failed', e); }
    };

    // ---- UI bindings ----
    const els = {
      currency: document.getElementById('currency'),
      perClick: document.getElementById('perClick'),
      perSec: document.getElementById('perSec'),
      bigBtn: document.getElementById('bigBtn'),
      shop: document.getElementById('shop'),
      prestigeBtn: document.getElementById('prestigeBtn'),
      themeBtn: document.getElementById('themeBtn'),
      soundBtn: document.getElementById('soundBtn'),
      resetBtn: document.getElementById('resetBtn'),
      toast: document.getElementById('toast')
    };

    const sounds = {
      enabled: false,
      click: new Audio('data:audio/wav;base64,UklGRjQAAABXQVZFZm10IBAAAAABAAEAESsAACJWAAACABABAAACAAACaGZmZmZm'), // tiny placeholder
      buy: new Audio('data:audio/wav;base64,UklGRjQAAABXQVZFZm10IBAAAAABAAEAESsAACJWAAACABABAAACAAACaGZmZmZm'),
    };

    const showToast = (msg) => {
      els.toast.textContent = msg;
      els.toast.classList.add('show');
      setTimeout(() => els.toast.classList.remove('show'), 1200);
    };

    // ---- Shop rendering ----
    const calcCost = (base, owned) => Math.floor(base * Math.pow(1.15, owned));
    const renderShop = () => {
      els.shop.innerHTML = '';
      state.items.forEach(it => {
        const cost = calcCost(it.baseCost, it.owned);
        const can = state.currency >= cost;
        const div = document.createElement('div');
        div.className = 'item' + (can ? '' : ' disabled');

        const left = document.createElement('div');
        const t = document.createElement('div');
        t.className = 'item-title';
        t.textContent = it.name;

        const d = document.createElement('div');
        d.className = 'item-desc';
        d.textContent = it.desc;

        const o = document.createElement('div');
        o.className = 'owned';
        o.textContent = `בבעלות: ${it.owned}`;

        left.appendChild(t); left.appendChild(d); left.appendChild(o);

        const right = document.createElement('div');
        const btn = document.createElement('button');
        btn.className = 'btn';
        btn.textContent = `קנה (${fmt(cost)})`;
        btn.disabled = !can;
        btn.addEventListener('click', () => buyItem(it.id));

        right.appendChild(btn);

        div.appendChild(left);
        div.appendChild(right);

        els.shop.appendChild(div);
      });
    };

    // ---- Game logic ----
    const updateDerived = () => {
      // Base derived from items
      let baseClick = 1;
      let baseSec = 0;
      state.items.forEach(it => {
        if (it.type === 'click') baseClick += it.effect * it.owned;
        if (it.type === 'sec') baseSec += it.effect * it.owned;
        if (it.type === 'mult-click') baseClick *= Math.pow(it.effect, it.owned);
        if (it.type === 'mult-sec') baseSec *= Math.pow(it.effect, it.owned);
      });
      state.perClick = Math.max(1, Math.floor(baseClick));
      state.perSec = Math.max(0, Math.floor(baseSec));
    };

    const addCurrency = (amount) => {
      const gain = amount * prestigeMult();
      state.currency += gain;
      // pulse
      els.bigBtn.classList.add('pulse');
      setTimeout(() => els.bigBtn.classList.remove('pulse'), 180);
      updateUI();
    };

    const clickGain = () => addCurrency(state.perClick);

    const buyItem = (id) => {
      const it = state.items.find(x => x.id === id);
      if (!it) return;
      const cost = calcCost(it.baseCost, it.owned);
      if (state.currency < cost) return;
      state.currency -= cost;
      it.owned++;
      updateDerived();
      updateUI();
      if (sounds.enabled) { try { sounds.buy.currentTime = 0; sounds.buy.play(); } catch(e){} }
      save();
    };

    const prestige = () => {
      const cost = 10000;
      if (state.currency < cost) {
        showToast('צריך עוד אבני ירח לפרסטיז\'');
        return;
      }
      state.currency -= cost;
      state.prestige += 1;
      // reset items and derived
      state.items.forEach(it => it.owned = 0);
      updateDerived();
      updateUI();
      showToast('פרסטיז\' בוצע! +10% בונוס תמידי');
      save();
    };

    const updateUI = () => {
      els.currency.textContent = fmt(state.currency);
      els.perClick.textContent = fmt(Math.floor(state.perClick * prestigeMult()));
      els.perSec.textContent = fmt(Math.floor(state.perSec * prestigeMult()));
      renderShop();
    };

    // ---- Tickers ----
    let secTimer = setInterval(() => {
      addCurrency(state.perSec);
    }, 1000);

    // ---- Events ----
    els.bigBtn.addEventListener('click', () => {
      clickGain();
      if (sounds.enabled) { try { sounds.click.currentTime = 0; sounds.click.play(); } catch(e){} }
    });

    els.prestigeBtn.addEventListener('click', prestige);

    els.themeBtn.addEventListener('click', () => {
      const isLight = document.documentElement.getAttribute('data-theme') === 'light';
      document.documentElement.setAttribute('data-theme', isLight ? 'dark' : 'light');
      showToast(isLight ? 'מצב כהה' : 'מצב בהיר');
      save();
    });

    els.soundBtn.addEventListener('click', () => {
      sounds.enabled = !sounds.enabled;
      els.soundBtn.textContent = `צלילים: ${sounds.enabled ? 'פועל' : 'כבוי'}`;
      showToast(sounds.enabled ? 'צלילים הופעלו' : 'צלילים כובו');
      save();
    });

    els.resetBtn.addEventListener('click', () => {
      if (!confirm('לאפס את המשחק? פעולה זו תמחק את ההתקדמות.')) return;
      localStorage.removeItem('lunar-save');
      location.reload();
    });

    // ---- Init ----
    load();
    updateDerived();
    updateUI();

    // Persist occasionally
    setInterval(save, 15000);

    // If first time, set dark theme attribute
    if (!document.documentElement.getAttribute('data-theme')) {
      document.documentElement.setAttribute('data-theme', 'dark');
    }
  </script>
</body>
</html>
